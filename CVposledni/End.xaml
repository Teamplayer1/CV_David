<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="CVposledni.End">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Místo práce"
                   FontSize="30"
                   HorizontalOptions="CenterAndExpand"
                   TextColor="Black"/>
            <Button Text="Místo výkonu práce"
                    x:Name="Cesta"
                    BackgroundColor="Azure"
                    HorizontalOptions="Center"
                    Clicked="Cesta_Clicked">
                
                
            </Button>
            <Label Text="Kontaktujte mě emailem"
                   FontSize="30"
                   HorizontalOptions="CenterAndExpand"
                   TextColor="Black"
                   Margin="0,10,0,0"/>

            <Entry Text="david.hanc10@gmail.com" Placeholder="Email Adress" x:Name="Email"></Entry>
            <Entry Text="Bereme Vás" Placeholder="Subject" x:Name="Subject"></Entry>
            <Button Text="Potvrdit" Clicked="Button_Clicked"
                    BackgroundColor="Azure"
                    HorizontalOptions="Center"
                    Margin="0,3,0,0"></Button>
            
            <Label Text="Kontaktujte mě telefonem"
                   FontSize="30"
                   HorizontalOptions="CenterAndExpand"
                   TextColor="Black"/>

            <Entry Text="732217009" Placeholder="Telefonní číslo" x:Name="Phonenumber"></Entry>
            <Entry Text="" Placeholder="Obsah Zprávy" x:Name="Sms"></Entry>
            <Button Text="Potvrdit" 
                    Clicked="Button_Clicked_1"
                    BackgroundColor="Azure"
                    Margin="0,3,0,0"
                    HorizontalOptions="Center"></Button>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>